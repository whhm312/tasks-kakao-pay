	<select id="selectNow" resultType="string">
		SELECT DATE_FORMAT(NOW() , '%Y-%m-%d') AS NOW
	</select>
  
	<insert id="insertBlessing" parameterType="me.kakao.pay.common.domain.Blessing">
		INSERT INTO TBL_BLESSING (
			BLESSER_ID, ROOM_ID, AMOUNT, MAX_RECEIVER_COUNT, BLESSING_DATE, TOKEN
		) VALUES (
			#{blesserId}, #{roomId}, #{amount}, #{maxReceiverCount}, NOW(), #{token}
		)
	</insert>
